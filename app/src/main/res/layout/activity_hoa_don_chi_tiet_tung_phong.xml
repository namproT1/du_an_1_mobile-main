<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appcompatactivity.HoaDonChiTietTungPhongActivity">

    <androidx.appcompat.widget.Toolbar
        android:background="#56B0A6"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/imgbackHoaDonChiTietTungPhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"/>
        <TextView
            android:id="@+id/tvTenTungPhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoá đơn phòng P101"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="#0E0E0E"
            android:fontFamily="sans-serif-medium"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvHoaDonChiTietTungPhong"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>